aside.note {
    padding: 0.5em;
    border: 1px dotted #000;
}
.github-link {
    font-size: 0.6em;
    a, a:visited {
        text-decoration: none;
    }
}

article > h1:first-child {
    margin-top: 0;
}

figure > h1 {
    margin: 0;
}

p code {
    background-color: #f0f0f0;
}

a.permalink {
    font-size: 50%;
    text-decoration: none;
    position: absolute;
    left: -25px;
    top: 10px;
}

section > h1 {
    position: relative;
}

pre > code {
    white-space: pre;
    overflow-x: auto;
}

@media print, (max-width: 700px) {

article > h1:first-child {
    margin-top: 25px;
}

section > h1 {
  margin-bottom: 0.5em;
}
}
